<div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= link_to article.title, article_path(article)%></h4>
          <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', { action: :destroy, id: article.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <div style="float: right">
            <i class="fa fa-eye" aria-hidden="true"></i> <%= article.view_count %>
          </div>
        </div>
      </div>
    </div>
  </div>
